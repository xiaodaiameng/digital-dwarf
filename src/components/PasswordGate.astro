---
const correctPassword = import.meta.env.PUBLIC_BLOG_PASSWORD || "ok";
---

<div id="fog-overlay" class="fog-overlay">
  <!-- 雾状效果层 -->
  <div class="fog-effect"></div>
  
  <!-- 密码输入框居中显示 -->
  <div class="password-center">
    <div class="password-card">
      <div class="password-header">
        <h2>博客停更中</h2>
        <p class="subtitle">主包正在闭关配制蟹黄堡秘方</p>
      </div>
      
      <div class="password-input-group">
        <input 
          type="text" 
          id="passwordInput" 
          placeholder="请输入海绵宝宝给的密钥..." 
          autocomplete="off"
          autofocus
        />
        <button type="button" id="unlockBtn">解锁访问</button>
      </div>
      
      <div class="password-hint">
        <!-- <small>提示：没有提示 </small> -->
         <small>提示：过三个月就可以解锁啦。</small>
      </div>
      
      <div id="message" class="password-message"></div>
      
      <div class="password-footer">
        <small>输入正确密码后，迷雾将自动散去</small>
      </div>
    </div>
  </div>
</div>

<script is:inline>
(function() {
  const PASSWORD = "ok";
  
  // 等待DOM加载
  function init() {
    const fogOverlay = document.getElementById('fog-overlay');
    const passwordInput = document.getElementById('passwordInput');
    const unlockBtn = document.getElementById('unlockBtn');
    const messageEl = document.getElementById('message');
    
    if (!fogOverlay || !passwordInput || !unlockBtn || !messageEl) {
      console.log('密码门组件元素未找到');
      return;
    }
    
    // 检查是否已经解锁
    const isUnlocked = localStorage.getItem('blog_unlocked') === 'true' || 
                       sessionStorage.getItem('blog_unlocked') === 'true' ||
                       document.cookie.includes('blog_access=true');
    
    if (isUnlocked) {
      fadeOutFog();
      return;
    }
    
    // 显示消息函数
    function showMessage(text, type) {
      messageEl.textContent = text;
      messageEl.className = `password-message ${type}`;
      
      if (type !== 'error') {
        setTimeout(() => {
          messageEl.textContent = '';
          messageEl.className = 'password-message';
        }, 3000);
      }
    }
    
    // 雾散效果
    function fadeOutFog() {
      fogOverlay.classList.add('fading-out');
      
      setTimeout(() => {
        fogOverlay.style.opacity = '0';
        fogOverlay.style.pointerEvents = 'none';
        
        setTimeout(() => {
          fogOverlay.style.display = 'none';
        }, 1000);
      }, 300);
    }
    
    // 提交处理函数
    function handleSubmit() {
      const userInput = passwordInput.value.trim();
      
      if (!userInput) {
        showMessage("⚠️ 没有输入密码乌 ", "warning");
        passwordInput.focus();
        return;
      }
      
      if (userInput === PASSWORD) {
        // 密码正确
        showMessage("✅", "success");

        
        // 保存解锁状态
        localStorage.setItem('blog_unlocked', 'true');

        sessionStorage.setItem('blog_unlocked', 'true');

  
  // 设置cookie
  document.cookie = 'blog_access=1; path=/; max-age=3600';
  
  console.log('Cookie已设置:', document.cookie);
  
  // 等待更长的时间让cookie生效
  setTimeout(() => {
    console.log('准备跳转，当前cookie:', document.cookie);
    // 使用location.replace避免回退到unlock页面
    window.location.replace('/blog');
  }, 1500); // 增加到1.5秒


} else {
        // 密码错误
        const errors = [
          "❌ 蟹老板说这个密码不能让你赚大钱！",
          "❌ 派大星无法理解",
          "❌ 章鱼哥关上了门",
          "❌ 痞老板找到秘方了吗",
          "❌ 主包不在这里，他去找小猪佩奇跳泥坑了",
          "❌ 珊迪说这个密码不够德州风格",
          "❌ 泡芙老师说密码需要更有礼貌",
          "❌ 凯伦表示计算错误"
        ];
        const randomError = errors[Math.floor(Math.random() * errors.length)];
        showMessage(randomError, "error");
        
        // 清空输入框并聚焦
        passwordInput.value = "";
        passwordInput.focus();
        
        // 抖动效果
        passwordInput.classList.add('shake');
        setTimeout(() => passwordInput.classList.remove('shake'), 500);
      }
    }
    
    // 事件监听
    unlockBtn.addEventListener('click', handleSubmit);
    
    passwordInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        handleSubmit();
      }
    });
    
    // 自动聚焦
    setTimeout(() => {
      passwordInput.focus();
    }, 300);
    
    // 防止点击穿透
    fogOverlay.addEventListener('click', (e) => {
      if (e.target === fogOverlay) {
        passwordInput.focus();
      }
    });
  }
  
  // 初始化
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

<style>
  /* 雾状覆盖层 */
  .fog-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    background: rgba(15, 23, 42, 0.92);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 1s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: auto;
  }
  
  /* 雾状流动效果 */
  .fog-effect {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 20% 30%, rgba(120, 119, 198, 0.25) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(254, 202, 202, 0.15) 0%, transparent 50%),
      linear-gradient(135deg, rgba(15, 23, 42, 0.95) 0%, rgba(30, 41, 59, 0.95) 100%);
    opacity: 0.7;
    animation: fog-move 25s infinite alternate ease-in-out;
  }
  
  @keyframes fog-move {
    0% {
      transform: translate(0, 0) scale(1);
      opacity: 0.6;
    }
    33% {
      transform: translate(-15px, 8px) scale(1.02);
      opacity: 0.7;
    }
    66% {
      transform: translate(10px, -5px) scale(0.98);
      opacity: 0.65;
    }
    100% {
      transform: translate(5px, 10px) scale(1.01);
      opacity: 0.7;
    }
  }
  
  /* 密码卡片容器 */
  .password-center {
    position: relative;
    z-index: 2;
    width: 90%;
    max-width: 420px;
  }
  
  /* 密码卡片 */
  .password-card {
    background: rgba(255, 255, 255, 0.96);
    border-radius: 24px;
    padding: 3rem 2.5rem;
    box-shadow: 
      0 32px 64px -12px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.15) inset,
      0 20px 40px rgba(245, 158, 11, 0.15);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    animation: card-float 4s ease-in-out infinite;
    transform-style: preserve-3d;
    perspective: 1000px;
  }
  
  @keyframes card-float {
    0%, 100% { 
      transform: translateY(0) rotateX(0.5deg); 
      box-shadow: 
        0 32px 64px -12px rgba(0, 0, 0, 0.5),
        0 0 0 1px rgba(255, 255, 255, 0.15) inset,
        0 20px 40px rgba(245, 158, 11, 0.15);
    }
    50% { 
      transform: translateY(-12px) rotateX(-0.5deg); 
      box-shadow: 
        0 48px 96px -16px rgba(0, 0, 0, 0.6),
        0 0 0 1px rgba(255, 255, 255, 0.2) inset,
        0 30px 60px rgba(245, 158, 11, 0.25);
    }
  }
  
  /* 卡片头部 */
  .password-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }
  
  .password-header h1 {
    font-size: 2rem;
    margin-bottom: 0.75rem;
    background: linear-gradient(135deg, #7bffff 0%, #90ffe7 50%, #caffc6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 800;
    letter-spacing: -0.5px;
    text-shadow: 0 2px 4px rgba(138, 255, 205, 0.1);
  }
  
  .password-header .subtitle {
    color: #64748b;
    font-size: 0.95rem;
    line-height: 1.5;
    max-width: 300px;
    margin: 0 auto;
  }
  
  /* 输入区域 */
  .password-input-group {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    margin-bottom: 2rem;
  }
  
  .password-input-group input {
    padding: 1.2rem 1.5rem;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-size: 1.1rem;
    background: rgba(255, 255, 255, 0.9);
    color: #1e293b;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-family: 'Segoe UI', system-ui, sans-serif;
  }
  
  .password-input-group input:focus {
    outline: none;
    border-color: #a777ff;
    box-shadow: 
      0 0 0 4px rgba(245, 158, 11, 0.15),
      0 10px 20px rgba(245, 158, 11, 0.1);
    background: white;
    transform: translateY(-2px);
  }
  
  .password-input-group input::placeholder {
    color: #94a3b8;
    font-size: 1rem;
  }
  
  .password-input-group button {
    padding: 1.2rem;
    background: linear-gradient(135deg, #ffd7fb 0%, #61095d 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
    overflow: hidden;
  }
  
  .password-input-group button:hover {
    transform: translateY(-3px);
    box-shadow: 
      0 15px 30px rgba(245, 11, 241, 0.4),
      0 0 0 1px rgba(255, 255, 255, 0.2) inset;
    background: linear-gradient(135deg, #24e5fb 0%, #0bf5c6 100%);
  }
  
  .password-input-group button:active {
    transform: translateY(-1px);
    box-shadow: 0 5px 15px rgba(11, 245, 66, 0.3);
  }
  
  .password-input-group button::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s;
  }
  
  .password-input-group button:hover::after {
    left: 100%;
  }
  
  /* 提示区域 */
  .password-hint {
    text-align: center;
    color: #94a3b8;
    font-size: 0.85rem;
    margin-bottom: 1.5rem;
    padding: 0.75rem;
    background: rgba(241, 245, 249, 0.5);
    border-radius: 8px;
    border-left: 3px solid #adf3ff;
  }
  
  /* 消息区域 */
  .password-message {
    text-align: center;
    min-height: 28px;
    font-weight: 600;
    padding: 0.75rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    transition: all 0.3s;
    font-size: 0.95rem;
  }
  
  .password-message.success {
    color: #059669;
    background: rgba(5, 150, 105, 0.12);
    border: 1px solid rgba(5, 150, 105, 0.2);
  }
  
  .password-message.error {
    color: #dc2626;
    background: rgba(220, 38, 38, 0.12);
    border: 1px solid rgba(220, 38, 38, 0.2);
  }
  
  .password-message.warning {
    color: #d97706;
    background: rgba(217, 119, 6, 0.12);
    border: 1px solid rgba(217, 119, 6, 0.2);
  }
  
  /* 页脚 */
  .password-footer {
    text-align: center;
    color: #70b1ff;
    font-size: 0.8rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(203, 213, 225, 0.3);
  }
  
  /* 抖动动画 */
  .shake {
    animation: shake 0.5s cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
  }
  
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    10%, 30%, 50%, 70%, 90% { transform: translateX(-4px); }
    20%, 40%, 60%, 80% { transform: translateX(4px); }
  }
  
  /* 雾散动画 */
  .fading-out {
    animation: fog-fade-out 1.2s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }
  
  @keyframes fog-fade-out {
    0% {
      opacity: 1;
      backdrop-filter: blur(25px);
    }
    100% {
      opacity: 0;
      backdrop-filter: blur(0px);
      visibility: hidden;
    }
  }
  
  /* 响应式调整 */
  @media (max-width: 480px) {
    .password-card {
      padding: 2.5rem 2rem;
      border-radius: 20px;
    }
    
    .password-header h1 {
      font-size: 1.7rem;
    }
    
    .password-input-group input,
    .password-input-group button {
      padding: 1.1rem;
      font-size: 1rem;
    }
    
    .password-header .subtitle {
      font-size: 0.9rem;
    }
  }
  
  @media (max-width: 360px) {
    .password-card {
      padding: 2rem 1.5rem;
    }
    
    .password-header h1 {
      font-size: 1.5rem;
    }
  }
</style>